
@{
    ViewData["Title"] = "AddNewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4">
        Add books
    </h3>
    <form method="post" asp-action="AddNewBook1" asp-controller="Book">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title"/>
        </div> 
        <div class="form-group">
            <label asp-for="Author"></label>
            <input class="form-control" asp-for="Author"/>
        </div>  <div class="form-group">
            <label asp-for="TotalPages"></label>
            <input class="form-control" asp-for="TotalPages"/>
        </div>  <div class="form-group">
            <label asp-for="Language"></label>
            <input class="form-control" asp-for="Language"/>
        </div><div class="form-group">
            <label asp-for="Category"></label>
            <input class="form-control" asp-for="Category"/>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description"/>
        </div> 
        <div class="form-group">
         
            <input type="submit" class="btn btn-dark" value="Add book"/>
        </div>

    </form>
</div>
